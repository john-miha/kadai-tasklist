<h1>タスク一覧</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.status %>&gt;<%= task.content %></li>
  <% end %>
</ul>

<div class="row">
  <%= link_to '新規タスクの作成', new_task_path, class: "mt-2" %>
  <%= link_to 'ログアウト', logout_path, method: :delete, class: "mt-2" %>
</div>

